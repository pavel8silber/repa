main-color = #79BBBB
about-color = #DDD8c8 
portfolio-color = #E18A68
blog-color = #DAD5C5 
contact-color = #4C5055 

body
    margin 0
    padding 0
    font 1em Arial, Helvetica, sans-serif

@font-face                          /* @font-face test */
    font-family augustatwo
    src url(../fonts/augustatwo.ttf)
    font-weight normal
    
@font-face                          /* @font-face test */
    font-family augustatwo
    src url(../fonts/augustatwo.woff2)
    font-weight bold
    
@font-face                          /* @font-face test */
    font-family SEASRN__
    src url(../fonts/SEASRN__.ttf)
    font-weight normal


.lp-section
    width 100%

.content
    max-width 1024px
    margin 0 auto
    
.header-section                     /* @font-face test */
    background-color main-color
    height 260px
    text-transform uppercase
    font-family augustatwo, Arial       
    font-size 2.4em
    
.header-main-menu__item
    background-color main-color
    height 260px
    text-transform uppercase
    font-family augustatwo, Arial       
    font-size 2.4em
    font-weight bold

.slider-section
    background-color main-color
    height 1827px
    
 .slider-main-title
    background-color main-color
    text-transform uppercase
    font-family SEASRN__, Arial       
    font-size 5.4em
    height 100px
    padding 50%
    margin 50% auto
    text-shadow 0 3px o white
    color white
    
    
.about-section 
    background-color about-color
    height 1605px
    
.portfolio-section 
    background-color portfolio-color
    height 1696px
    
.blog-section 
    background-color blog-color
    height 2104px   

.contact-section 
    background-color contact-color
    height 1646px 